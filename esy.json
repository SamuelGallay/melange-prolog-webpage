{
  "name": "melange-prolog-webpage",
  "dependencies": {
    "ocaml": "4.12.x",
    "melange": "melange-re/melange",
    "esbuild": "^0.11.14"
  },
  "esy": {
    "buildsInSource": "unsafe",
    "build": "bsb -make-world"
  },
  "scripts": {
    "pack": "esbuild _build/default/src/Client.bs.js --bundle --outfile=docs/Client.js",
    "watch":
      "sh -c 'esy build && esy pack; while true; do inotifywait src -e modify -qq; esy build && esy pack; done'",
    "start":
      "python -m http.server 8080 --directory docs"
},
  "installConfig": {
    "pnp": false
  }
}